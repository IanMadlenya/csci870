<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.nydev.wifituner.ScanConfActivity"
    android:background="@color/darkgrey">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_start"
        android:id="@+id/scan_start"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@color/red"
        android:textSize="20sp"
        android:clickable="true"
        android:onClick="start_scan" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <!--<Space
            android:id="@+id/scan_conf_space1"
            android:layout_width="match_parent"
            android:layout_height="20dp" />-->

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/scan_conf_building"
            android:spinnerMode="dialog"
            android:visibility="invisible" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/scan_conf_floor"
            android:spinnerMode="dialog"
            android:visibility="invisible" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/scan_conf_room"
            android:spinnerMode="dialog"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>
