<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.nydev.wifituner">

    <!--Normal-->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!--Dangerous-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity" android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignupActivity" android:label="@string/signup"
            android:screenOrientation="portrait"/>

        <activity android:name=".HomeActivity" android:label="@string/app_name"
            android:screenOrientation="portrait"/>

        <activity android:name=".ScanConfActivity" android:label="@string/app_name"
            android:screenOrientation="portrait"/>

        <activity android:name=".ScanPushActivity" android:label="@string/app_name"
            android:screenOrientation="portrait"/>

        <activity android:name=".WifiTestActivity" android:label="@string/test_wifi"
            android:screenOrientation="portrait"/>

        <activity android:name=".APITestActivity" android:label="@string/test_api"
            android:screenOrientation="portrait"/>

        <activity android:name=".DBTestActivity" android:label="@string/test_db"
            android:screenOrientation="portrait"/>

        <service android:name=".WifiScanService" android:exported="false" />

        <receiver android:name=".WifiScanReceiver">
            <intent-filter>
                <action android:name="android.net.wifi.SCAN_RESULTS" />
            </intent-filter>
        </receiver>

    </application>

</manifest>